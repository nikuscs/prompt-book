{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PromptBook",
  "version": "0.1.0",
  "identifier": "com.promptbook.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "PromptBook",
        "width": 980,
        "height": 620,
        "minWidth": 860,
        "minHeight": 500,
        "visible": false,
        "decorations": true,
        "transparent": false,
        "shadow": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 14,
          "y": 18
        }
      },
      {
        "label": "menubar",
        "title": "PromptBook Menu",
        "width": 360,
        "height": 400,
        "resizable": false,
        "visible": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
