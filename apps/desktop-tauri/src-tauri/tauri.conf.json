{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PromptBook",
  "version": "0.1.0",
  "identifier": "com.promptbook.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "PromptBook",
        "width": 720,
        "height": 440,
        "minWidth": 640,
        "minHeight": 280,
        "visible": false,
        "decorations": true,
        "transparent": false,
        "shadow": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 14,
          "y": 18
        }
      },
      {
        "label": "menubar",
        "title": "PromptBook Menu",
        "width": 330,
        "height": 300,
        "resizable": false,
        "visible": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "macOS": {
      "signingIdentity": "Developer ID Application: Grove OU (RJ3GB6YDXL)",
      "notarize": {
	"keychainProfile": "notarytool-profile"
	}
    },
    "active": true,
    "targets": ["app", "dmg"],
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFOUQzRkQxRjc1MjQwQkMKUldTOFFGTDMwVCtkem1EUWx4UGhxR0lDcXNRdWUwRkxkc2NCVDRVZXAxVUFoMWtHQy83WDcxRWUK",
      "endpoints": [
        "https://github.com/nikuscs/prompt-book/releases/latest/download/latest.json"
      ]
    }
  }
}
